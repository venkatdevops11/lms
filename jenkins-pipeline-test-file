pipeline {
    agent any
       environment {
          NEXUS_CRED = credentials('nexus')
        }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'cd webapp && npm install && npm run build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'cd webapp && docker container run --rm -e SONAR_HOST_URL="http://35.222.14.246:9000" -e SONAR_LOGIN="sqp_f946ec20e59112b0dd319f1e682bb31953073c17" -v ".:/usr/src" sonarsource/sonar-scanner-cli -Dsonar.projectKey=lms'
            }
        }
        stage('Release') {
            steps {
                echo 'Release Nexus'
                sh 'rm -rf *.zip'
                sh 'cd webapp && zip dist-${BUILD_NUMBER}.zip -r dist'
                sh 'cd webapp && curl -v -u $Username:$Password --upload-file dist-${BUILD_NUMBER}.zip http://35.222.14.246:8081/repository/lms/'
            }
        }
    }
}
